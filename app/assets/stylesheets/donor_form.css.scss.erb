$donor-image-height: 500px;

#donor-form-image-block {
    .donor-form-image {
        z-index: -20;
        background-size: cover;
        background-image: url(<%= image_path('landing_splash_strawberries.jpg') %>);
        height: $donor-image-height;
        width: 100%;
        top: 0;
        position: absolute;
        margin-top: $topbar-height + 1;
    }
    .donor-form-image-overlay {
        z-index: -10;
        height: $donor-image-height;
        width: 100%;
        top: 0;
        position: absolute;
        margin-top: $topbar-height + 1;
        background-color: rgba(0, 0, 0, 0.25);
    }
    .donor-form-content {
        height: $donor-image-height;
        background-color: transparent;
        padding-top: 10%;
    }
    h1, p {
        color: $white;
    }
    #scroll-arrow {
        color: $medium-grey;
        -webkit-transition: color 0.3s;
        transition: color 0.3s;
        &:hover {
            color: $white;
        }
    }
}

#donor-form-food-block {
    @include full-width-block($light-grey);
    border-bottom: 2px solid $dark-grey;
    @include form-block-padding();

    label.donation_picture_button input[type="file"] {
      position: fixed;
      top: -1000px;
    }

    .donation_picture_button {
      height:31px;
      width:80px;
      background: $medium-green;
      border: 1px solid $white;
      border-radius: $global-radius;
      padding: 2px 5px;
      margin: 2px;
    }

    .donation_picture_button:hover {
        background-color: scale-color($medium-green, $lightness: 10%);
    }

    .donation_picture_button :invalid + span {
        color: $white;
    }
    .donation_picture_button :valid + span {
        color: $white;
    }

    .no-file-selected {
        font-size: 12px;
        line-height: 31px;
    }
}


#donor-form-pickup-block {
    @include full-width-block($off-white);
    border-bottom: 2px solid $dark-grey;
    @include form-block-padding();
}

#donor-form-detail-block {
    @include full-width-block($light-grey);
    border-bottom: 2px solid $dark-grey;
    @include form-block-padding();
}

#donor-form-submit-block {
    @include full-width-block($off-white);
    @include form-block-padding();
}

.add-form-padding {
    padding-top: 30px;
    padding-bottom: 30px;
}

.contact-padding {
    @media #{$medium-up} {
        padding-top: 30px;
    }
}

.donate-block {
    padding-top: 50px;
}

#donation-modal {
  height: 0;
}
