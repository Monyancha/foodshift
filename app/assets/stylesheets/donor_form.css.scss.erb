$donor-image-height: 500px;

#donor-form-image-block {
    .donor-form-image {
        z-index: -20;
        background-size: cover;
        background-image: url(<%= image_path('landing_splash_strawberries.jpg') %>);
        height: $donor-image-height;
        width: 100%;
        top: 0;
        position: absolute;
        margin-top: $topbar-height + 1;
    }
    .donor-form-image-overlay {
        z-index: -10;
        height: $donor-image-height;
        width: 100%;
        top: 0;
        position: absolute;
        margin-top: $topbar-height + 1;
        background-color: rgba(0, 0, 0, 0.25);
    }
    .donor-form-content {
        height: $donor-image-height;
        background-color: transparent;
        padding-top: 10%;
    }
    h1, p {
        color: $white;
    }
    #scroll-arrow {
        color: $medium-grey;
        -webkit-transition: color 0.3s;
        transition: color 0.3s;
        &:hover {
            color: $white;
        }
    }
}

#donor-form-food-block {
    @include full-width-block($light-grey);
    border-bottom: 2px solid $dark-grey;
    @include form-block-padding();

    #donation_picture{
      z-index: 999;
      line-height: 0;
      position: absolute;
      opacity: 0;
      filter: alpha(opacity = 0);-ms-filter: "alpha(opacity=0)";
      cursor: pointer;
      _cursor: hand;
      margin: 0;
      padding:0;
      left:0;
      }
     .add-photo-btn{
       position:relative;
       overflow:hidden;
       cursor:pointer;
       text-align:center;
       background-color:#3ca532;
       color:#fff;
       display:block;
       width:100px;
       height:31px;
       font-size:14px;
       line-height:30px;
       float:left;
       border-radius: $global-radius;
     }

}


#donor-form-pickup-block {
    @include full-width-block($off-white);
    border-bottom: 2px solid $dark-grey;
    @include form-block-padding();
}

#donor-form-detail-block {
    @include full-width-block($light-grey);
    border-bottom: 2px solid $dark-grey;
    @include form-block-padding();
}

#donor-form-submit-block {
    @include full-width-block($off-white);
    @include form-block-padding();
}

.add-form-padding {
    padding-top: 30px;
    padding-bottom: 30px;
}

.contact-padding {
    @media #{$medium-up} {
        padding-top: 30px;
    }
}

.donate-block {
    padding-top: 50px;
}

#donation-modal {
  height: 0;
}
